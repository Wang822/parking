<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.backend.shop.mapper.FavoriteDao">
    <!--insert new chat-->
    <insert id="add" parameterType="Favorite">
        insert into favorite (user_id, good_id)
        values (#{userId}, #{goodId})
    </insert>
    <!--select to check if the good is already in favorite-->
    <select id="selectFavor" parameterType="Favorite" resultType="int">
        SELECT count(*)
        FROM favorite
        WHERE user_id = #{userId}
          and good_id = #{goodId}
    </select>
    <!--select all goods in the user's favorite list-->
    <select id="selectGoods" parameterType="int" resultType="Good">
        SELECT good_id,
               name,
               status,
               price,
               description,
               campus,
               old,
               seller_id,
               pic_addr,
               publish_date,
               deposit,
               tag
        FROM Good
                 natural join favorite
        WHERE user_id = #{userId}
        order by favor_id
    </select>
    <!--delete a favorite-->
    <delete id="deleteFavorite">
        delete
        from favorite
        where user_id = #{userId}
          and good_id = #{goodId}
    </delete>
    <!--select count of favorites-->
    <select id="selectCount" parameterType="int" resultType="int">
        SELECT count(*)
        FROM favorite
        WHERE user_id = #{userId}
    </select>
</mapper>
